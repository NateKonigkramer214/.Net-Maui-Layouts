<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.Pages.StackLayoutDemo"
             Title="Stack Layout Demo">
    <ScrollView Orientation="Vertical">
        <StackLayout Padding="20" Spacing="10" Orientation="Vertical"
                 VerticalOptions="End">
            <Label Text=". NET MAUI Layouts" 
               TextColor="Red"
               FontSize="25"
               FontAttributes="Bold"
               Margin="30"
               HorizontalOptions="Center"></Label>
            <Button x:Name="verticalStackLayoutButton" Text="Vertical Stack Layout" Clicked="verticalStackLayoutButton_Clicked" />
            <Button Text="Horizontal Stack Layout" x:Name="horizontalStackLayoutButton" Clicked="horizontalStackLayoutButton_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>